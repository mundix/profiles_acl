<%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first, label: "Nombre", required: true %>
      <%= f.input :last, label: "Apellido",required: true %>

      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>

      <%= f.input :gender, label: "GÃ©nero", required: true %>
      <%= f.input :birth, label:"Fecha Nacimiento",required: true %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Crear" %>
    </div>
<% end %>